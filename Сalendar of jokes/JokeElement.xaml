<UserControl x:Class="Сalendar_of_jokes.JokeElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Сalendar_of_jokes"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="655">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/pngwing.com (10).png" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1"/>
        <Button x:Name="Choosed_theme" Grid.Column="2" Grid.Row="0" Width="30" Background="{x:Null}" Cursor="Hand" Click="Choosed_theme_Click"/>
    </Grid>
</UserControl>
